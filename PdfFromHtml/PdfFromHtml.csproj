        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <AssemblyName>PdfFromHtml</AssemblyName>
        <RootNamespace>PdfFromHtml</RootNamespace>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Bogus" Version="35.6.2" />
      <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="8.0.15" />
      <PackageReference Include="Microsoft.Extensions.Logging" Version="8.0.1" />
      <PackageReference Include="Microsoft.Playwright" Version="1.51.0" />
    </ItemGroup>

    <ItemGroup>
      <UpToDateCheckInput Remove="Invoices\InvoiceView.razor" />
    </ItemGroup>

</Project>
